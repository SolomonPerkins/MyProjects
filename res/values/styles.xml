<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- Slideshow title bar -->
    <style name="slideShowTitleBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#99000000</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18dp</item>
    </style>
    
    
    <!--  styles for details view -->
    <style name="projectDetailsHeaders">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">#f5f5f5</item>
        <item name="android:textColor">#8a8a8a</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
    <style name="projectDetailsContent">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingBottom">30dp</item>	
        <item name="android:paddingLeft">5dp</item>			
    </style>

    
    <style name="lineDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- All clickable links -->
    <style name="clickableLinks">
        <item name="android:textColor">#12a12a</item>
        <item name="android:paddingBottom">12sp</item>
    </style>
    
    
    <!-- My personal details -->
    <style name="myDetailsTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
		<item name="android:paddingTop">5dip</item>
    </style>

    <style name="myDetailsContent">
       <item name="android:layout_below">@+id/me_title</item>
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textSize">15sp</item>
		<item name="android:paddingBottom">10dip</item>		
       
    </style>



	<style name="date">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#969696</item>
	    <item name="android:padding">2dp</item>
	    <item name="android:textSize">10sp</item>	    	    
	</style>

</resources>
